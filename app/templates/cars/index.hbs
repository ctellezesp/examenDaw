<LinkTo @route="cars.create"><a class="waves-effect waves-light btn"><i class="material-icons left">add</i>Agregar</a></LinkTo>
<div class="row">
	{{#each this.model as |car|}}
		<div class="col s12 l4">
			<div class="card">
		        <div class="card-image">
		          <img src="{{car.img_url}}">
		          <span class="card-title">{{car.brand}}</span>
		          <LinkTo @route="cars.edit" @model={{car.id}}><a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">edit</i></a></LinkTo>
		        </div>
		        <div class="card-content">
		          <p><b>Color:</b> {{car.color}}</p>
		          <p><b>Wheels:</b> {{car.wheels}}</p>
		          <p><b>Price:</b> ${{car.price}}</p>
		        </div>
		      </div>
		</div>
	{{/each}}
</div>